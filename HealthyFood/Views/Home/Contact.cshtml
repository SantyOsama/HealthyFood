<div class="contact-page">
    <!-- Hero Section -->
    <div class="col-lg-6">
        <div class="section-header text-start mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
            <h1 class="display-5 mb-3">Contact Us</h1>
            <p>
                We'd love to hear from you! Reach out with any questions about our fresh produce.
            </p>
        </div>
    </div>
    <div class="container py-5">
        <div class="row g-4 align-items-stretch">
            <!-- Contact Form -->
            <div class="col-lg-7 d-flex">
                <div class="card shadow rounded w-100 h-100" style="border-radius: 15px !important;">
                    <div class="card-body">
                        <h2 class="card-title mb-4" style="color:#3CB815">Send Us a Message</h2>
                        <form id="contactForm">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="name" class="form-label">Your Name</label>
                                    <input type="text" class="form-control" id="name" placeholder="John Doe" required>
                                </div>
                                <div class="col-md-6">
                                    <label for="email" class="form-label">Email Address</label>
                                    <input type="email" class="form-control" id="email" placeholder="your@email.com" required>
                                </div>
                                <div class="col-md-6">
                                    <label for="phone" class="form-label">Phone Number</label>
                                    <input type="tel" class="form-control" id="phone" placeholder="(123) 456-7890">
                                </div>
                                <div class="col-md-6">
                                    <label for="subject" class="form-label">Subject</label>
                                    <select class="form-select" id="subject" required>
                                        <option value="">Select an option</option>
                                        <option value="Order Inquiry">Order Inquiry</option>
                                        <option value="Product Information">Product Information</option>
                                        <option value="Delivery Question">Delivery Question</option>
                                        <option value="Feedback">Feedback</option>
                                        <option value="Other">Other</option>
                                    </select>
                                </div>
                                <div class="col-12">
                                    <label for="message" class="form-label">Your Message</label>
                                    <textarea class="form-control" id="message" rows="5" placeholder="How can we help you?" required></textarea>
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="btn px-4 mt-2" style="background:#3CB815;color:white">
                                        <i class="bi bi-send me-2"></i>
                                        Send Message
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Contact Info -->
            <div class="col-lg-5 d-flex">
                <div class="card shadow rounded w-100 h-100" style="border-radius: 15px !important;">
                    <div class="card-body">
                        <h3 class="card-title mb-4" style="color:#3CB815">Our Contact Information</h3>

                        <div class="d-flex mb-3">
                            <div class="bg-light rounded-circle p-2 me-3 d-inline-flex justify-content-center align-items-center" style="width: 40px; height: 40px;">
                                <i class="bi bi-geo-alt fs-4" style="color:#3CB815"></i>
                            </div>
                            <div>
                                <h5 class="mb-1">Address</h5>
                                <p class="mb-0">123 Fresh Produce Lane<br>Garden City, CA 90210</p>
                            </div>
                        </div>

                        <div class="d-flex mb-3">
                            <div class="bg-light rounded-circle p-2 me-3 d-inline-flex justify-content-center align-items-center" style="width: 40px; height: 40px;">
                                <i class="bi bi-telephone fs-4" style="color:#3CB815"></i>
                            </div>
                            <div>
                                <h5 class="mb-1">Phone</h5>
                                <p class="mb-0">
                                    <a href="tel:+201158039656" class="text-decoration-none">+20 115 8039 656</a>
                                </p>
                            </div>
                        </div>

                        <div class="d-flex mb-3">
                            <div class="bg-light rounded-circle p-2 me-3 d-inline-flex justify-content-center align-items-center" style="width: 40px; height: 40px;">
                                <i class="bi bi-envelope fs-4" style="color:#3CB815"></i>
                            </div>
                            <div>
                                <h5 class="mb-1">Email</h5>
                                <p class="mb-0">
                                    <a href="mailto:santyosama2@gmail.com" class="text-decoration-none">santyosama2@gmail.com</a>
                                </p>
                            </div>
                        </div>

                        <div class="d-flex">
                            <div class="bg-light rounded-circle p-2 me-3 d-inline-flex justify-content-center align-items-center" style="width: 40px; height: 40px;">
                                <i class="bi bi-clock fs-4" style="color:#3CB815"></i>
                            </div>
                            <div>
                                <h5 class="mb-1">Business Hours</h5>
                                <p class="mb-0">
                                    Monday - Friday: 8AM - 6PM<br>
                                    Saturday: 9AM - 5PM<br>
                                    Sunday: Closed
                                </p>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
