@{
    ViewData["Title"] = "Home Page";
}
<!-- Carousel Start -->
<div class="container-fluid p-0 mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div id="header-carousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="w-100" src="/img/carousel-1.jpg" alt="Image">
                <div class="carousel-caption">
                    <div class="container">
                        <div class="row justify-content-start">
                            <div class="col-lg-7">
                                <h1 class="display-2 mb-5 animated slideInDown">Organic Food Is Good For Health</h1>
                            </div>
                            <br />
                            <div class="col-lg-8 mt-5">
                                <a asp-action="Index" asp-controller="Product" class="btn btn-primary rounded-pill py-sm-3 px-sm-5">Products</a>
                                <a href="" class="btn btn-secondary rounded-pill py-sm-3 px-sm-5 ms-3">Services</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img class="w-100" src="/img/carousel-2.jpg" alt="Image">
                <div class="carousel-caption">
                    <div class="container">
                        <div class="row justify-content-start">
                            <div class="col-lg-7">
                                <h1 class="display-2 mb-5 animated slideInDown">Natural Food Is Always Healthy</h1>
                            </div>
                            <div class="col-lg-8 mt-5">
                                <a asp-action="Index" asp-controller="Product" class="btn btn-primary rounded-pill py-sm-3 px-sm-5">Products</a>
                                 <a href="" class="btn btn-secondary rounded-pill py-sm-3 px-sm-5 ms-3">Services</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#header-carousel"
                data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#header-carousel"
                data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>
<!-- Carousel End -->


<!-- About Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-5 align-items-center">
            <div class="col-lg-6 wow fadeIn" data-wow-delay="0.1s">
                <div class="about-img position-relative overflow-hidden p-5 pe-0">
                    <img class="img-fluid w-100" src="img/about.jpg" alt="About the Farm">
                </div>
            </div>
            <div class="col-lg-6 wow fadeIn" data-wow-delay="0.5s">
                <h1 class="display-5 mb-4">Fresh, Organic, and Locally Sourced Produce</h1>
                <p class="mb-4">We believe healthy food starts from the soil. That's why we bring you the finest organic fruits and vegetables grown locally, carefully selected to ensure they arrive fresh and full of nutrients.</p>
                <p><i class="fa fa-check me-3" style="color:#3CB815"></i>100% Organic, Locally Sourced Produce</p>
                <p><i class="fa fa-check me-3" style="color:#3CB815"></i>Freshness and Quality in Every Order</p>
                <p><i class="fa fa-check me-3" style="color:#3CB815"></i>Committed to Sustainable Farming Practices</p>
                <a class="btn rounded-pill py-3 px-5 mt-3" style="background:#3CB815 ; color:white" href="#">Learn More</a>
            </div>
        </div>
    </div>
</div>
<!-- About End -->


<!-- Feature Start -->
<div class="container-fluid bg-light bg-icon my-5 py-6">
    <div class="container">
        <div class="section-header text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
            <h1 class="display-5 mb-3">Why Choose Our Farm?</h1>
            <p>We offer a unique dining experience where authentic flavors meet top-quality ingredients and exceptional service.</p>
        </div>
        <div class="row g-4">
            <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                <div class="bg-white text-center h-100 p-4 p-xl-5 d-flex flex-column">
                    <img class="img-fluid mb-4" src="img/icon-1.png" alt="Fresh Ingredients" style="max-width: 60px; display: block; margin: 0 auto;">
                    <h4 class="mb-3">100% Fresh Ingredients</h4>
                    <p class="mb-4">We use the highest quality fresh ingredients daily to ensure the best taste and nutritional value in every dish we serve.</p>
                    <a class="btn btn-outline-primary border-2 py-2 px-4 rounded-pill mt-auto" href="#">Read More</a>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.3s">
                <div class="bg-white text-center h-100 p-4 p-xl-5 d-flex flex-column">
                    <img class="img-fluid mb-4" src="img/icon-2.png" alt="Organic Products" style="max-width: 60px; display: block; margin: 0 auto;">
                    <h4 class="mb-3">Organic & Healthy</h4>
                    <p class="mb-4">Our meals are crafted with organic, chemical-free ingredients, promoting a healthy lifestyle for you and your family.</p>
                    <a class="btn btn-outline-primary border-2 py-2 px-4 rounded-pill mt-auto" href="#">Read More</a>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.5s">
                <div class="bg-white text-center h-100 p-4 p-xl-5 d-flex flex-column">
                    <img class="img-fluid mb-4" src="img/icon-3.png" alt="Hygienic and Safe" style="max-width: 60px; display: block; margin: 0 auto;">
                    <h4 class="mb-3">Hygienic & Safe</h4>
                    <p class="mb-4">We maintain the highest hygiene standards in food preparation, ensuring safety and quality in every bite.</p>
                    <a class="btn btn-outline-primary border-2 py-2 px-4 rounded-pill mt-auto" href="#">Read More</a>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Feature End -->


<!-- Firm Visit Start -->
<div class="container-fluid bg-primary bg-icon mt-5 py-6">
    <div class="container">
        <div class="row g-5 align-items-center">
            <div class="col-md-7 wow fadeIn" data-wow-delay="0.1s">
                <h1 class="display-5 text-white mb-3">Visit Our Firm</h1>
                <p class="text-white mb-0">We are a leading provider of organic fruits and vegetables, committed to delivering fresh, healthy, and sustainably sourced produce to our customers. Our firm operates on a mission to provide high-quality products while supporting environmentally friendly practices. With years of experience in the industry, we ensure that every product is grown with care and delivered to you with the utmost dedication. Join us in our journey toward healthier living and a more sustainable future.</p>
            </div>
            <div class="col-md-5 text-md-end wow fadeIn" data-wow-delay="0.5s">
                <a class="btn btn-lg btn-secondary rounded-pill py-3 px-5" href="https://www.example.com/visit">Visit Now</a>
            </div>
        </div>
    </div>
</div>
