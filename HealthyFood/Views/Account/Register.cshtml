@model RegisterViewModel

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <h3 class="fw-bold mb-2">Create Account</h3>
                        <p class="text-muted">Please fill in your information to register</p>
                    </div>

                    <form asp-action="Register" method="post">
                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label"></label>
                            <div class="position-relative">
                                <input asp-for="FullName" class="form-control" placeholder="John Doe" />
                                <span class="position-absolute top-50 end-0 translate-middle-y me-3 text-muted">
                                    <i class="bi bi-person"></i>
                                </span>
                            </div>
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <div class="position-relative">
                                <input asp-for="Email" class="form-control" placeholder="john@example.com" />
                                <span class="position-absolute top-50 end-0 translate-middle-y me-3 text-muted">
                                    <i class="bi bi-envelope"></i>
                                </span>
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="City" class="form-label">City</label>
                            <div class="position-relative">
                                <select asp-for="City" class="form-control" asp-items="Html.GetEnumSelectList<City>()">
                                    <option value="">Select your city</option>
                                </select>
                                <span class="position-absolute top-50 end-0 translate-middle-y me-3 text-muted">
                                    <i class="bi bi-geo-alt"></i>
                                </span>
                            </div>
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <div class="position-relative">
                                <input asp-for="Password" class="form-control" placeholder="••••••••" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label"></label>
                            <div class="position-relative">
                                <input asp-for="ConfirmPassword" class="form-control" placeholder="••••••••" />
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Register</button>

                        <p class="text-center text-sm text-muted mt-3">
                            Already have an account?
                            <a asp-action="Login" asp-controller="Account" class="fw-semibold text-decoration-none">Login</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />

